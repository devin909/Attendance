<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EventListActivity" >

    <GridView
	    android:id="@+id/attendance_list"
	    android:layout_width="fill_parent"
	    android:layout_height="400dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:columnWidth="150dp"
	    android:gravity="center"
	    android:numColumns="auto_fit"
	    android:stretchMode="columnWidth" >
	</GridView>

	<Button
	    android:id="@+id/voteliststart"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/todostart"
	    android:layout_alignBottom="@+id/todostart"
	    android:layout_alignRight="@+id/attendance_list"
	    android:layout_marginRight="21dp"
	    android:text="Vote List View" />

	<Button
	    android:id="@+id/todostart"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginRight="59dp"
	    android:layout_toLeftOf="@+id/voteliststart"
	    android:text="To Do List" />

</RelativeLayout>
